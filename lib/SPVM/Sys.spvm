    my $utimbuf = (Sys::IO::Utimbuf)undef;
    
    if ($atime < 0 && $mtime < 0) {
      # Do nothing
    }
    else {
      $utimbuf = Sys::IO::Utimbuf->new;
      $utimbuf->set_actime($atime);
      $utimbuf->set_modtime($mtime);
