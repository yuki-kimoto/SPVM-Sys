    my $fopen_mode = &to_fopen_mode($open_mode);
    
    my $stream = Sys::IO->fdopen($fd, $fopen_mode);
    
    $stream_ref->[0] = $stream;
  }
  
  private static method to_fopen_mode : string ($open_mode : string) {
    
    my $fopen_mode = (string)undef;
    
    if ($open_mode eq "<") {
      $fopen_mode = "rb";
    }
    elsif ($open_mode eq ">") {
      $fopen_mode = "wb";
    }
    elsif ($open_mode eq ">>") {
      $fopen_mode = "wa";
    }
    elsif ($open_mode eq "+<") {
      $fopen_mode = "r+b";
    }
    elsif ($open_mode eq "+>") {
      $fopen_mode = "w+b";
    }
    elsif ($open_mode eq "+>>") {
      $fopen_mode = "a+b";
    }
    else {
      $fopen_mode = $open_mode;
    }
    
    return $fopen_mode;
  }
  
